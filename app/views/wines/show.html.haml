- content_for :meta_title, @wine.name
- content_for :meta_description, "üç∑ Glouglou, ce vin est valid√© par Alice et Hugo !"
- if @wine.picture.attachment
  - wine_picture = cl_image_path(@wine.picture.key)
  - content_for :meta_image, wine_picture

- if @wine.picture.attachment
  -url = cl_image_path @wine.picture.key
  .cover-picture.wine-picture{style: "background-image:url(#{url})", class: "#{@wine.color}-border"}
    = cl_image_tag @wine.picture.key, id: "wine-picture"

.wine-show-name-container
  %h3= @wine.name
  .wine-taggings
    - @wine.wine_taggings.each do |wine_tagging|
      .wine-tagging{class: "#{@wine.color}-color"}= wine_tagging.wine_tag.name

.wine-show-details
  - if @wine.average_review
    .wine-show-reviews
      .wine-show-review.wine-show-average-review
        .wine-show-review-title= "Note"
        .wine-show-review-value= @wine.average_review
      .wine-show-personal-reviews
        - @wine.wine_reviews.each do |wine_review|
          .wine-show-review.wine-show-personal-review{class: "#{wine_review.reviewer.name.downcase}-wine-review"}
            .wine-show-review-title= wine_review.reviewer.name
            .wine-show-review-value= wine_review.review

  - if !@wine.domain.blank?
    %h4= "Domaine"
    = @wine.domain
  - if !@wine.variety.blank?
    %h4= "C√©page"
    = @wine.variety
